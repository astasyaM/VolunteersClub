@model IEnumerable<VolunteersClub.Models.Participant>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VolunteerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResponsibilityID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfirmedVolunteer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfirmedLeader)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolunteerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResponsibilityID)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.ConfirmedVolunteer)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.ConfirmedLeader)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RecordID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RecordID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RecordID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
