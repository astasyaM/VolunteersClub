@model IEnumerable<Event>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


      <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 g-2">
          @foreach(var item in Model)
        {
                        <div class="col">
              <div class="card shadow-sm">
                <img class="bd-placeholder-img card-img-top" src="@item.Image" width="100%" height="100%" alt = "Card image cap" />
                <div class="card-body">
                  <p class="card-text"> @item.EventName </p>
                  <p class="card-text"> @item.EventDescription </p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                      <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                    </div>
                    <small class="text-body-secondary">@item.EventDate</small>
                  </div>
                </div>
              </div>
            </div>
        }
    </div>
  </div>

