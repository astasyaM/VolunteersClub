@model VolunteersClub.Models.Mark

@{
    ViewData["Title"] = "Edit";
}

<style>
    .card-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh; 
    }

    .card {
        width: 80%; 
        max-width: 600px; 
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); 
        margin: auto; 

    }

    .form-group textarea.form-control {
        resize: vertical; 
    }
</style>

<div class="text-center">
    <h1>Внесение изменений</h1>
</div>

<hr />
<div class="card-container">
    <div class="card">
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MarkID" />
                    <div class="form-group mb-3">
                        <label asp-for="CurrentMark" class="control-label">Оценка за участие</label>
                        <input asp-for="CurrentMark" class="form-control" />
                        <span asp-validation-for="CurrentMark" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Notes" class="control-label">Комментарий к оценке</label>
                        <textarea asp-for="Notes" class="form-control" rows="6"></textarea> 
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Сохранить" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
