@model IEnumerable<VolunteersClub.Models.MarksWithVolunteerModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    @foreach (var item in Model)
    {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                    <h5 class="card-title"><a href="@Url.Action("Details", "Volunteers", new { id = item.VolunteerID })">@item.VolunteerSurname @item.VolunteerName</a></h5>
                    </div>
                    <div class="card-body">
                        <h3 class="card-text">@item.CurrentMark</h3>
                        <p class="card-text">@item.Notes</p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.MarkID">Подробнее...</a>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.MarkID">Изменить</a>
                    </div>
                </div>
            </div>
    }
</div>