@model IEnumerable<VolunteersClub.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@item.Image" class="card-img-top" alt="Event Image">
                    <div class="card-body">
                        <h5 class="card-title font-weight-bold">@item.EventName</h5>
                        <p class="card-text">@item.EventDescription</p>
                        <div class="btn-group" role="group" aria-label="Event Actions">
                            <a asp-action="Edit" asp-route-id="@item.EventID" class="btn btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.EventID" class="btn btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.EventID" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
    }
</div>