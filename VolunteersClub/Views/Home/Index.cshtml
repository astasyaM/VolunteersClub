@model IEnumerable<Event>

@{
    ViewData["Title"] = "Home Page";
}

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: Arial, sans-serif;
    }

.carousel-caption {
  width: 80%; /* Задаем ширину блока с подписью в процентах относительно родительского элемента */
  max-width: 600px; /* Максимальная ширина блока с подписью в пикселях */
  margin: 0 auto; /* Центрируем блок с подписью по горизонтали */
  background-color: rgba(255, 255, 255, 0.7); /* Белый цвет с полупрозрачностью */
  padding: 10px; /* Добавляем небольшие внутренние отступы */
  border-radius: 8px; /* Добавляем скругление углов */
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Добавляем тень для выделения от фона */
  position: absolute; /* Позиционируем абсолютно */
  top: 50%; /* Располагаем по вертикали на 50% */
  left: 50%; /* Располагаем по горизонтали на 50% */
  transform: translate(-50%, -50%); /* Центрируем по вертикали и горизонтали */
  display: flex; /* Применяем flex-контейнер */
  flex-direction: column; /* Устанавливаем вертикальное направление для элементов внутри flex-контейнера */
  align-items: center; /* Центрируем элементы по вертикали */
}

.carousel-caption h1,
.carousel-caption p,
.carousel-caption a {
  margin: 10px 0; /* Убираем внешние отступы у заголовков, абзацев и ссылок */
  text-align: center; /* Выравниваем текст по центру */
}



    .grid-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(600px, 1fr));
      grid-gap: 20px;
      margin: 20px;
    }

    .wide-bar {
    height: 20px; /* Высота полосы, можно изменить по вашему желанию */
    background-color: linear-gradient(to right, #87CEEB, #87CEEB); /* Светло-голубой цвет, можно изменить по вашему желанию */
    width: 100%;
}

    .grid-item {
      display: flex;
      align-items: center;
      padding: 10px;
      background-color: #f0f0f0;
      border-radius: 8px;
      max-width: 600px;
    }

    .grid-item img {
      max-width: 100%;
      height: auto;
      margin-right: 20px;
      border-radius: 4px;
    }

    .bold-text {
      font-weight: bold;
    }

.carousel-item {
  height: calc(90vh); /* Уменьшение высоты на 1/4 экрана */
  overflow: hidden; /* Обрезание изображения, выходящего за границы */
}

.carousel-item img {
  object-fit: cover; /* Заполнение контейнера изображением, сохраняя соотношение сторон и обрезая избыток */
  height: 100%; /* Установка высоты изображения на 100% */
  margin-top: -5%; /* Центрирование изображения по вертикали, чтобы оставался центр */
  }

  .carousel-item img {
    object-fit: cover; /* Заполнение контейнера изображением, сохраняя соотношение сторон и обрезая избыток */
    height: 100%; /* Установка высоты изображения на 100% */
  }
  }
  </style>
</head>

